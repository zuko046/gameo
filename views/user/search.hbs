<!--================ Feature Product Area =================-->
<br>
<section class="feature_product_area section_gap_bottom_custom">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-12">
        <div class="main_title">
          <h2><span>Products</span></h2>
          <p>search list </p>
        </div>
      </div>
    </div>
{{!--  --}}

<div class="input-group rounded">
  <form action="/users/search" method="post" style="display: flex; flex-direction: row;">
  <input name="key" type="text" class="form-control rounded" placeholder="Search" required/>
  <button type="submit" class="input-group-text border-0" ><i class="fas fa-search"></i></button>
  </form>
</div>
<br>

{{!--  --}}
    <div class="row">
      {{#each productdata}}
      <div class="col-lg-4 col-md-6">
        <div class="single-product">
          <div class="product-img">
            <img 
              class="img-fluid w-100"
              style="width: 10rem; height: auto;"
              src="{{this.Image.[0]}}"
              alt="product image is not available"
            />
            {{!-- <div class="p_icon">
              <a href="#">
                <i class="ti-eye"></i>
              </a>
              <a href="#">
                <i class="ti-heart"></i>
              </a>
              <a href="#">
                <i class="ti-shopping-cart"></i>
              </a>
            </div> --}}
          </div>
          <div class="product-btm">
            <a href="/users/useraccount/itemview/{{this._id}}" class="d-block" style="text-decoration: none;">
              <h4>{{this.Name}}</h4>
            </a>
          {{#if this.OfferPrice}}
            <div class="mt-3">
              <span class="mr-4">${{this.OfferPrice}}</span>
              <del>${{this.ActualPrice}}</del>
              {{#if this.CategoryOfferPercentage}}
              <p>Category OFFER upto {{this.CategoryOfferPercentage}}%</p>
              {{/if}}
              {{#if this.ProductOfferPercentage}}
              <p>Product OFFER upto {{this.ProductOfferPercentage}}%</p>
              {{/if}}
            </div>
          {{else}}
          
          <div class="mt-3">
              <span class="mr-4">${{this.ActualPrice}}</span>
          </div>
          <br>
          <br>
          {{/if}}
                    <button class="btn btn-dark" onclick="addToCart('{{this._id}}')"><i class="bi bi-bag-plus-fill"> Add Cart</i></button>
          </div>
        </div>
      </div>
      {{/each}}     
    </div>
  </div>
</section>
<!--================ End Feature Product Area =================-->
