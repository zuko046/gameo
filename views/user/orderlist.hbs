              </div>
              <div class="col-md-3 col-lg-3 col-xl-3">
                <p class="lead fw-normal mb-2">{{#each this.product}} 
                                                  {{this.productName}} <br>
                                               {{/each}}</p>
                <p><span class="text-muted">Total :  </span>
                {{#if this.totalWithCouponDiscount}}
                {{this.totalWithCouponDiscount}}
                {{else}}
