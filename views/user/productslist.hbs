<section class="container-fluid" style="display: flex; flex-direction: row;">
{{#each products}}
  <div class="col-lg-4 col-md-6" >
    <div class="single-product" style="width: 20rem; height: 30rem; ">
      <div class="product-img">
        <img
          class="card-img"
          src="{{this.Image.[0]}}"
          style="height: 15rem;"
          alt=""
        />
        {{!-- <div class="p_icon">
          <a href="#">
            <i class=" fa ti-eye"></i>
          </a>
          <a href="#">
            <i class="fa ti-heart"></i>
          </a>
          <a href="#">
            <i class="fa ti-shopping-cart"></i>
          </a>
        </div> --}}
      </div>
      <div class="product-btm">
        <a href="/users/useraccount/itemview/{{this._id}}" class="d-block" style="text-decoration: none;">
          <h4>{{this.Name}}</h4>
        </a>
        <div class="mt-3">
          {{!-- <span class="mr-4">${{this.OfferPrice}}</span> --}}
          {{!-- <del>${{this.ActualPrice}}</del> --}}
           {{#if this.OfferPrice}}
            <div class="mt-3">
              <span class="mr-4">${{this.OfferPrice}}</span>
              <del>${{this.ActualPrice}}</del>
              {{#if this.CategoryOfferPercentage}}
              <p>Category OFFER upto {{this.CategoryOfferPercentage}}%</p>
              {{/if}}
              {{#if this.ProductOfferPercentage}}
              <p>Product OFFER upto {{this.ProductOfferPercentage}}%</p>
              {{/if}}
            </div>
          {{else}}
          
          <div class="mt-3">
              <span class="mr-4">${{this.ActualPrice}}</span>
          </div>
          <br>
          <br>
          {{/if}}
                    <button class="btn btn-dark" onclick="addToCart('{{this._id}}')"><i class="bi bi-bag-plus-fill"> Add Cart</i></button>

        </div>
      </div>
    </div>
  </div>
  {{/each}}

</section>