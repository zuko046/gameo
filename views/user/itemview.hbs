                  <div id="img-containers" class="carousel-item" style="width: 30rem; height: 20rem;">
                    <img style="width: 4rem; height: auto;" 
                      class="d-block w-100 block__pic"

                      src="{{item.Image.[1]}}"
                      alt="Second slide"
                    />
                  </div>
                  <div id="img-containers" class="carousel-item" style="width: 30rem; height: 20rem;">
                    <img style="width: 4rem; height: auto;" 
                      class="d-block w-100 block__pic"
                    
                       src="{{item.Image.[2]}}"
                      alt="Third slide"
                    />
                  </div>
                  <div id="img-containers" class="carousel-item" style="width: 30rem; height: 20rem;">
                    <img style="width: 4rem; height: auto;" 
                      class="d-block w-100 block__pic"
                      
                       src="{{item.Image.[3]}}"
                      alt="Forth slide"
                    />
                  </div>
  

                </div>
              </div>
            </div>
          </div>
          <div class="col-lg-5 offset-lg-1">
            <div class="s_product_text">
              <h3>{{item.Name}}</h3>
              
              {{!-- {{#if item.OfferPrice}}
              <h2>$.{{item.OfferPrice}}</h2>
              <del>$.{{item.ActualPrice}}</del>
               <h4>OFFER UPTO {{item.CategoryOfferPercentage}}%</h4>
              {{else}}
              <h2>$.{{item.ActualPrice}}</h2>
