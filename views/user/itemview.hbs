    <div class="product_image_area">
      <div class="container">
        <div class="row s_product_inner">
          <div class="col-lg-6">
            <div class="s_product_img">
              <div
              
              style="width: 30rem; height: auto;"
                id="carouselExampleIndicators"
                class="carousel slide"
                data-ride="carousel"
              >
                <ol class="carousel-indicators">
                  <li
                    data-target="#carouselExampleIndicators"
                    data-slide-to="0"
                    class="active"
                  >
                    <img id="img-container" style="width: 3rem; height: auto;"
                      src="{{item.Image.[0]}}"
                      alt=""
                    />
                  </li>
                  <li
                    data-target="#carouselExampleIndicators"
                    data-slide-to="1"
                  >
                    <img id="img-container" style="width: 3rem; height: auto;"
                      src="{{item.Image.[1]}}"
                      alt=""
                    />
                  </li>
                  <li
                    data-target="#carouselExampleIndicators"
                    data-slide-to="2"
                  >
                    <img id="img-container" style="width: 3rem; height: auto;"
                      src="{{item.Image.[2]}}"
                      alt=""
                    />
                  </li>
                  <li
                    data-target="#carouselExampleIndicators"
                    data-slide-to="3"
                  >
                    <img id="img-container" style="width: 3rem; height: auto;"
                      src="{{item.Image.[3]}}"
                      alt=""
                    />
                  </li>
                </ol>
                <div class="carousel-inner"  >
                  <div  id="img-containers" style="width: 30rem; height: 20rem;" class="carousel-item active"  >
                    <div class="lens" id="img-container" style="width:100%">
                    <img style="width: 4rem; height: auto;" 
                      class="d-block w-100 block__pic"
                      src="{{item.Image.[0]}}"
                      alt="First slide"
                    />
                    </div>
                  </div>
                  {{!-- <div class="col-md-12 px-0 lens mt-5" id="img-container" style="width:100%">
