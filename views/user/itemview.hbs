                {{#if item.OfferPrice}}
            <div class="mt-3">
              <h2>${{item.OfferPrice}}</span>
              <del>${{item.ActualPrice}}</del>
              {{#if item.CategoryOfferPercentage}}
              <h4>Category OFFER upto {{item.CategoryOfferPercentage}}%</h4>
              {{/if}}

              {{#if item.ProductOfferPercentage}}
              <h4>Product OFFER upto {{item.ProductOfferPercentage}}%</h4>
              {{/if}}
            </div>
          {{else}}
          
          <div class="mt-3">
              <h4>${{item.ActualPrice}}</h4>
          </div>
          
          {{/if}}













              <ul class="list">
                <li>
                  <a style="text-decoration: none;" class="active" href="#">
                    <span>Category</span> : {{item.category}}</a
                  >
                </li>
                <li>
                  <a style="text-decoration: none;" href="#"> <span>Availibility</span> : In Stock {{item.Stock}}</a>
                </li>
              </ul>
              <p>
                {{item.Description}}
              </p>
              
              </div>
              <div class="card_area">
                <button class="main_btn" onclick="addToCart('{{item._id}}')">Add to Cart</button>
                    {{!-- <a class="icon_btn" href="#">
                    <i class="lnr lnr lnr-diamond"></i>
                    </a> --}}
                <button style="margin-left: 2rem;" class="genric-btn danger circle" onclick="addToWishList('{{item._id}}')" style="text-decoration: none;">
                  {{!-- <i style="font-size: 1rem;" class="lnr lnr lnr-heart"></i> --}}
                  <i class="bi bi-heart-fill"></i>
                  </button>
                </a>
              </div>
            </div>
          </div>
